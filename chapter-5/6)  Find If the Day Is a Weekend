#[allow(dead_code)]   // <-- this removes the warning
enum Days {
    Monday,
    Tuesday,
    Wednesday,
    Thursday,
    Friday,
    Saturday,
    Sunday,
}

impl Days {
    fn is_weekend(&self) -> u8 {
        match self {
            Days::Saturday | Days::Sunday => 1,
            _ => 0,
        }
    }
}

fn main() {
    let d1 = Days::Friday;
    let d2 = Days::Sunday;

    println!("Friday  => {}", d1.is_weekend());
    println!("Sunday  => {}", d2.is_weekend());
}
