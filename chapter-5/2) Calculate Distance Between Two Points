use std::f64;

struct Point {
    x: f64,
    y: f64,
}

fn distance(p1: &Point, p2: &Point) -> f64 {
    let dx = p2.x - p1.x;
    let dy = p2.y - p1.y;
    ((dx * dx) + (dy * dy)).sqrt()
}

fn test() {
    let p1 = Point { x: 3.0, y: 4.0 };
    let p2 = Point { x: 7.0, y: 1.0 };

    let d = distance(&p1, &p2);
    println!("Distance = {}", d);
}

fn main() {
    test();
}
