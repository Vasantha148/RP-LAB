use std::fs::File;
use std::io::{Read, Write};

fn main() {
   
    let mut file = File::create("input.txt").expect("Unable to create file");
    file.write_all(b"Hello Rust File IO!").expect("Unable to write");

    let mut file = File::open("input.txt").expect("Unable to open file");
    let mut contents = String::new();
    file.read_to_string(&mut contents).expect("Unable to read file");

   
    println!("File Content: {}", contents);

   
    let mut output = File::create("output.txt").expect("Unable to create output file");
    output.write_all(contents.as_bytes()).expect("Unable to write");
    
    println!("Data written to output.txt successfully!");
}
